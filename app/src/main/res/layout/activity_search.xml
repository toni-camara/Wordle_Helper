<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_launcher_foreground"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/searchHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:fontFamily="sans-serif-light"
        android:text="WORDLE"
        android:textSize="30sp" />

    <LinearLayout
        android:id="@+id/buttonsLayout"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/searchHeader"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingHorizontal="20sp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/showListBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:background="#6746c3"
            android:text="Reset List"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/filterBtn"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#1de9b6"
            android:text="Filter" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/inputLayoutGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonsLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input1"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/design_default_color_primary"

            android:maxLength="1"
            android:textAlignment="center"
            android:inputType="textCapCharacters"
            android:importantForAutofill="no"
            android:textAllCaps="true"
            android:cursorVisible="false"
            android:textColor="@color/white"
            tools:text="-" />

        <EditText
            android:id="@+id/input2"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:inputType="textCapCharacters"
            android:importantForAutofill="no"
            android:layout_marginHorizontal="5dp"
            android:background="@color/design_default_color_primary"
            android:maxLength="1"
            android:cursorVisible="false"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            tools:text="-" />

        <EditText
            android:id="@+id/input3"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:importantForAutofill="no"
            android:cursorVisible="false"
            android:inputType="textCapCharacters"
            android:layout_marginHorizontal="5dp"
            android:background="@color/design_default_color_primary"
            android:maxLength="1"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            tools:text="-" />

        <EditText
            android:id="@+id/input4"
            android:layout_width="40dp"
            android:importantForAutofill="no"
            android:layout_height="35dp"
            android:layout_marginHorizontal="5dp"
            android:inputType="textCapCharacters"
            android:cursorVisible="false"
            android:background="@color/design_default_color_primary"
            android:maxLength="1"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            tools:text="-" />

        <EditText
            android:id="@+id/input5"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:importantForAutofill="no"
            android:layout_marginHorizontal="5dp"
            android:inputType="textCapCharacters"
            android:cursorVisible="false"
            android:background="@color/design_default_color_primary"
            android:maxLength="1"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            tools:text="-" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/inputLayoutYellow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputLayoutGreen"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input6"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/design_default_color_primary"

            android:maxLength="1"
            android:textAlignment="center"
            android:inputType="textCapCharacters"
            android:importantForAutofill="no"
            android:textAllCaps="true"
            android:cursorVisible="false"
            android:textColor="@color/white"
            tools:text="-" />

        <EditText
            android:id="@+id/input7"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:inputType="textCapCharacters"
            android:importantForAutofill="no"
            android:layout_marginHorizontal="5dp"
            android:background="@color/design_default_color_primary"
            android:maxLength="1"
            android:cursorVisible="false"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            tools:text="-" />

        <EditText
            android:id="@+id/input8"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:importantForAutofill="no"
            android:cursorVisible="false"
            android:inputType="textCapCharacters"
            android:layout_marginHorizontal="5dp"
            android:background="@color/design_default_color_primary"
            android:maxLength="1"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            tools:text="-" />

        <EditText
            android:id="@+id/input9"
            android:layout_width="40dp"
            android:importantForAutofill="no"
            android:layout_height="35dp"
            android:layout_marginHorizontal="5dp"
            android:inputType="textCapCharacters"
            android:cursorVisible="false"
            android:background="@color/design_default_color_primary"
            android:maxLength="1"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            tools:text="-" />

        <EditText
            android:id="@+id/input10"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:importantForAutofill="no"
            android:layout_marginHorizontal="5dp"
            android:inputType="textCapCharacters"
            android:cursorVisible="false"
            android:background="@color/design_default_color_primary"
            android:maxLength="1"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            tools:text="-" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/inputLayoutBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputLayoutYellow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/input11"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:layout_marginHorizontal="5dp"
            android:background="@color/design_default_color_primary"

            android:maxLength="1"
            android:textAlignment="center"
            android:inputType="textCapCharacters"
            android:importantForAutofill="no"
            android:textAllCaps="true"
            android:cursorVisible="false"
            android:textColor="@color/white"
            tools:text="-" />

        <EditText
            android:id="@+id/input12"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:inputType="textCapCharacters"
            android:importantForAutofill="no"
            android:layout_marginHorizontal="5dp"
            android:background="@color/design_default_color_primary"
            android:maxLength="1"
            android:cursorVisible="false"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            tools:text="-" />

        <EditText
            android:id="@+id/input13"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:importantForAutofill="no"
            android:cursorVisible="false"
            android:inputType="textCapCharacters"
            android:layout_marginHorizontal="5dp"
            android:background="@color/design_default_color_primary"
            android:maxLength="1"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            tools:text="-" />

        <EditText
            android:id="@+id/input14"
            android:layout_width="40dp"
            android:importantForAutofill="no"
            android:layout_height="35dp"
            android:layout_marginHorizontal="5dp"
            android:inputType="textCapCharacters"
            android:cursorVisible="false"
            android:background="@color/design_default_color_primary"
            android:maxLength="1"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            tools:text="-" />

        <EditText
            android:id="@+id/input15"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:importantForAutofill="no"
            android:layout_marginHorizontal="5dp"
            android:inputType="textCapCharacters"
            android:cursorVisible="false"
            android:background="@color/design_default_color_primary"
            android:maxLength="1"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            tools:text="-" />

    </LinearLayout>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/inputLayoutBlack"
        android:layout_marginTop="20sp"
        android:layout_centerHorizontal="true"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/horizontalWords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/verticalWordsLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center_horizontal"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/verticalWordsCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/verticalWordsLeft"
                android:layout_marginHorizontal="12dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/verticalWordsRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/verticalWordsCenter"
                android:gravity="center_horizontal"
                android:orientation="vertical">

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>